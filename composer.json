{
    "name": "internet/intercord",
    "type": "library",
    "description": "A library for sending payloads to discord via webhooks.",
    "homepage": "https://doctor-internet.dev",
    "license": "MIT",
    "authors": [{
        "name": "John Internet",
        "homepage": "https://doctor-internet.dev/",
        "email": "jonjon1234.github@gmail.com",
        "role": "Developer"
    }],

    "scripts": {
        "test": "phpunit --debug -vvv --bootstrap vendor/autoload.php --colors=never --whitelist src/ --coverage-html coverage --testdox-html test.html --coverage-clover=coverage.xml tests",
        "pcov-polyfill": [
            "@composer require --dev pcov/clobber",
            "pcov clobber"
        ]
    },

    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^6.4"
    },
    "autoload": {
        "psr-4": {
            "Internet\\InterCord\\": "src/"
        }
    },

    "require-dev": {
        "phpunit/phpunit": ">=7 <10"
    }
}
